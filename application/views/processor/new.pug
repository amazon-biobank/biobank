extends ../layout/layout.pug

block append header

block content
  .card.o-hidden.border-0.shadow-lg.my-5.ml-5.mr-5
    .card-body.p-0
      // Nested Row within Card Body
      .row
        .col-lg-12
          .p-5
            .text-center
              if(language == 0)
                h1.h4.text-gray-900.mb-4 Add a processor
                p.mb-4 A processor is responsible for handling the raw DNA data
              else 
                h1.h4.text-gray-900.mb-4 Adicionar um Processador
                p.mb-4 Um processador é responsável por tratar os dados brutos de DNA                
            form.user(action='/processor/new' method='post')
              .form-group
                input#name.form-control.form-control-user(name='name' type='text' placeholder='Nome do Processador')
              .form-group
                input#organization.form-control.form-control-user(name='organization' type='text' placeholder='Organização Responsável')
              hr
              .float-right.mb-4.inline-block
                if(language == 0)
                  a.btn.btn-danger.btn-user.mr-3.px-5(href='/processor')
                    | Cancel
                else 
                  a.btn.btn-danger.btn-user.mr-3.px-5(href='/processor')
                    | Cancelar                  
                input.btn.btn-primary.btn-user.px-5(type='submit' value='Adicionar')

block append scripts
