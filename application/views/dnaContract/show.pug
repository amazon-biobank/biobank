extends ../layout/layout.pug

block append header

block content
  .container.mt-4
    h1 Detalhes do Smart Contract
    .card.mb-4
      .card-header.card-header.d-flex.justify-content-between.align-items-center Smart Contract
        div 
          a.btn.btn-primary.btn-sm.text-white(data-toggle="modal" data-target="#buyModal" title="Comprar o dado")
            | Comprar o dado
      .card-body
        form
          .form-group
            label.mb-1(for='dnaId') ID do DNA correspondente
            input#dnaId.form-control(disabled type='text' value= dnaContract.dnaId)
          .form-row
            .form-group.col-md-6
              label.mb-1(for='id') ID
              input#id.form-control(disabled type='text'  value=dnaContract.id)
            .form-group.col-md-6
              label.mb-1(for='created_at') Criado em
              input#id.form-control(disabled type='text'  value=dnaContract.created_at)
          .card
            .card-header Detalhes
            .card-body
              .form-group 
                label.mb-1(for='price') Pre√ßo
                input#price.form-control(disabled type='text'  value=dnaContract.parameters.price)
  include components/buy-modal.pug


