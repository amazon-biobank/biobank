.card.shadow.mb-4
  .card-header.py-3
    h6.m-0.font-weight-bold.text-primary Lista de Dados Brutos
  .card-body
    .table-responsive
      table#dataTable.table.table-bordered(width='100%' cellspacing='0')
        thead
          tr
            th Título
            th Coletor
            th Criado em
            th Recompensa
            th Status
            th Ação
        tbody
          each data, index in datas
            tr
              td
                = data.title
              td
                = data.collector
              td
                = data.created_at
              td
                = data.process_reward
              td
                = data.status
              td
                a.btn.btn-info.btn-sm.btn-circle.mr-2(
                  data-toggle="tooltip" data-placement="top" title="Ver Detalhes" href="/data/" + data.id
                )
                  i.fas.fa-eye
                a.btn.btn-primary.btn-sm.btn-circle.mr(
                  data-placement="top" title="Processar" data-toggle="modal" data-target="#processModal"+index  href='#'
                )
                  i.fas.fa-cogs
            include process-modal.pug
