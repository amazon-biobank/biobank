.card.shadow.mb-4
  .card-header.py-3
    h6.m-0.font-weight-bold.text-primary 
      = data.title
  .card-body
    .table-responsive
      table#dataTable.table.table-bordered(width='100%' cellspacing='0')
        thead
          tr
            th Created At
            th Type
            th User address
            th OPeration ID
            th Action
        tbody
          each operation in operations
            tr
              td
                = operation.created_at
              td
                = operation.type
              td
                = operation.userAddress
              td
                = operation.id
              td
                a.btn.btn-info.btn-sm.btn-circle(
                  data-toggle="tooltip" data-placement="top" title="See Details" href="/operation/" + operation.id
                )
                  i.fas.fa-eye

