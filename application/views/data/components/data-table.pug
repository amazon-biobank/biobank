.card.shadow.mb-4
  .card-header.py-3
    h6.m-0.font-weight-bold.text-primary List Data
  .card-body
    .table-responsive
      table#dataTable.table.table-bordered(width='100%' cellspacing='0')
        thead
          tr
            th Type
            th Title
            th ID
            th Created At
            th Actions
        tbody
          each data, index in datas
            tr
              td
                = data.type
              td
                = data.metadata.title
              td
                = data.id
              td
                = data.created_at

              td
                a.btn.btn-info.btn-sm.btn-circle.mr-2(
                  data-toggle="tooltip" data-placement="top" title="See Details" href="/data/" + data.id
                )
                  i.fas.fa-eye
                a.btn.btn-secondary.btn-sm.btn-circle.mr-2(
                  data-toggle="tooltip" data-placement="top" title="See History" href="/data/" + data.id + "/list-operations"
                )
                  i.fas.fa-history
