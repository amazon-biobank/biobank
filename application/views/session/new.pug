extends ../layout/loginLayout.pug

block append header

block content
      body.bkimg
        .container
            .row.justify-content-center
                .col-lg-7
                    // Basic login form
                    .card.shadow-lg.border-0.rounded-lg.mt-5
                        .card-header.justify-content-center
                            h3.font-weight-light.my-4 Add Certificate
                        .card-body
                            // Login form
                            form.user(action='/session/new' method='post' enctype="multipart/form-data")
                                // Form Group (email address)
                                .form-group
                                    label.small.mb-1(for='inputEmailAddress') Certificate
                                    input#inputEmailAddress.form-control(name='certificate' type='file' placeholder='Enter email address' )
                                // Form Group (password)
                                .form-group
                                    label.small.mb-1(for='inputPassword') Password
                                    input#inputPassword.form-control(name='password' type='password' placeholder='Enter your password')
                                // Form Group (login box)
                                .form-group.d-flex.align-items-center.justify-content-between.mt-4.mb-0
                                    a.small(href='#') 
                                    input.btn.btn-primary.px-3(type='submit' value='Add')
                        .card-footer.text-center
                            if(messages.error)
                                .alert.alert-danger.alert-dismissible.fade.show(role=alert)
                                    = messages.error
                            .small
                                a(href='http://amazonbiobank.duckdns.org:3000/home' target="_blank") You need Certificate? Click here!


block append scripts
