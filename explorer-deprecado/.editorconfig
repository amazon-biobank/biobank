root = true

[*]
# tabbed indentation:
indent_style = tab
indent_size = 1
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
# editorconfig-tools is unable to ignore longs strings or urls
max_line_length = null
[*.{md,txt}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
